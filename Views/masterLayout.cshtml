@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bereketli Topraklar</title>

    <!-- Bootstrap 5.3.7 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link href="/css/site.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@300;400;500;600;700&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
</head>
<body class="bg-beige">
@await Html.PartialAsync("social-items")
@await Html.PartialAsync("ModernNavigation")


    <!-- Main Content -->
    <main class="main-content">
        @RenderBody()
    </main>
    
@await Html.PartialAsync("ContactAppointmentForm", new btlast.Models.ContactFormViewModel())
    <!-- Footer -->
    @await Html.PartialAsync("Footer")
    
    <a href="#contactFormContainer" id="callme" class="fixed-call-btn">
        <i class="fa-solid fa-phone-volume"></i>
        <span>Sizi Arayalım</span>
    </a>

    <a href="https://wa.me/905551234567" class="fixed-whatsapp-btn" target="_blank" aria-label="WhatsApp üzerinden iletişime geçin">
        <i class="fa-brands fa-whatsapp"></i>
        <span>WhatsApp</span>
    </a>
    


    <!-- Bootstrap 5.3.7 JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
    <script>
        function adjustMainContentPadding() {
            const navbar = document.querySelector('.modern-nav');
            const mainContent = document.querySelector('.main-content');
            
            if (navbar && mainContent) {
                const navHeight = navbar.offsetHeight;
                // Ana içeriğin üstüne, navigasyon barının yüksekliği kadar boşluk ekle
                mainContent.style.paddingTop = navHeight + 'px';
            }
        }

        // Bu fonksiyonu hem sayfa ilk yüklendiğinde
        document.addEventListener('DOMContentLoaded', adjustMainContentPadding);
        
        // hem de pencere boyutu değiştiğinde (mobil/desktop geçişleri için) çalıştır
        window.addEventListener('resize', adjustMainContentPadding);
    </script>
</body>
</html>
